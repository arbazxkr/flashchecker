generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Chain {
  ETHEREUM
  BSC
  TRON
  SOLANA
}

enum SessionStatus {
  PENDING
  VERIFIED
  EXPIRED
  SWEPT
}

model DepositSession {
  id              String        @id @default(uuid())
  chain           Chain
  depositAddress  String        @map("deposit_address")
  derivationIndex Int           @unique @map("derivation_index")
  requiredAmount  Decimal       @default(1.0) @map("required_amount") @db.Decimal(18, 6)
  receivedAmount  Decimal?      @map("received_amount") @db.Decimal(18, 6)
  status          SessionStatus @default(PENDING)
  expiresAt       DateTime      @map("expires_at")
  txHash          String?       @map("tx_hash")
  sweepTxHash     String?       @map("sweep_tx_hash")
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")

  @@index([status])
  @@index([chain, status])
  @@index([depositAddress])
  @@index([expiresAt])
  @@map("deposit_sessions")
}

model DerivationCounter {
  id          String @id @default("singleton")
  lastIndex   Int    @default(0) @map("last_index")

  @@map("derivation_counter")
}

model SweepLog {
  id              String   @id @default(uuid())
  sessionId       String   @map("session_id")
  chain           Chain
  fromAddress     String   @map("from_address")
  toAddress       String   @map("to_address")
  amount          Decimal  @map("amount") @db.Decimal(18, 6)
  gasTxHash       String?  @map("gas_tx_hash")
  sweepTxHash     String   @map("sweep_tx_hash")
  createdAt       DateTime @default(now()) @map("created_at")

  @@index([sessionId])
  @@index([chain])
  @@map("sweep_logs")
}
