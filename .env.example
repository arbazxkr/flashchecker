# ─────────────────────────────────────────────
# FlashChecker Environment Configuration
# ─────────────────────────────────────────────

# Server
PORT=3000
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/flashchecker?schema=public"

# Master Wallet Mnemonic (BIP-39) — NEVER COMMIT THIS
MASTER_MNEMONIC="your twelve word mnemonic phrase goes here replace with actual words"

# ─── RPC Endpoints ───
ETH_RPC_URL="https://mainnet.infura.io/v3/YOUR_INFURA_KEY"
ETH_WS_URL="wss://mainnet.infura.io/ws/v3/YOUR_INFURA_KEY"

BSC_RPC_URL="https://bsc-dataseed1.binance.org"
BSC_WS_URL="wss://bsc-ws-node.nariox.org:443"

TRON_API_URL="https://api.trongrid.io"
TRON_API_KEY="YOUR_TRONGRID_API_KEY"

SOLANA_RPC_URL="https://api.mainnet-beta.solana.com"
SOLANA_WS_URL="wss://api.mainnet-beta.solana.com"

# ─── Confirmation Thresholds ───
ETH_CONFIRMATIONS=12
BSC_CONFIRMATIONS=15
TRON_CONFIRMATIONS=19
SOLANA_CONFIRMATIONS=31

# ─── Session Config ───
SESSION_EXPIRY_MINUTES=5
REQUIRED_AMOUNT_USDT=1

# ─── Sweeper Config ───
SWEEPER_INTERVAL_MS=60000
SWEEPER_ENABLED=true

# ─── Rate Limiting ───
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# ─── Logging ───
LOG_LEVEL=info
